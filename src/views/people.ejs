<div class="page-header">
	<h3 class="mb-0"><i class="bi bi-people me-2"></i>Người</h3>
	<a class="btn btn-primary" href="/people/new"><i class="bi bi-plus-lg me-1"></i>Thêm người</a>
</div>

<div class="card">
	<div class="table-responsive">
		<table class="table mb-0 align-middle">
			<thead>
				<tr>
					<th>Tên</th>
					<th>Điện thoại</th>
					<th>Ghi chú</th>
					<th style="width:170px">Hành động</th>
				</tr>
			</thead>
			<tbody>
				<% if (!people.length) { %>
					<tr>
						<td colspan="4">
							<div class="empty-state"><i class="bi bi-emoji-neutral"></i><div>Chưa có người nào</div></div>
						</td>
					</tr>
				<% } %>
				<% people.forEach(p => { %>
					<tr>
						<td><strong><%= p.name %></strong></td>
						<td><%= p.phone || '' %></td>
						<td><%= p.note || '' %></td>
						<td class="text-nowrap">
							<a class="btn btn-sm btn-outline-secondary" href="/people/<%= p.id %>/edit"><i class="bi bi-pencil-square me-1"></i>Sửa</a>
							<form method="POST" action="/people/<%= p.id %>?_method=DELETE" style="display:inline">
								<button class="btn btn-sm btn-outline-danger" data-confirm data-message="Xoá người này?">
									<i class="bi bi-trash me-1"></i>Xoá
								</button>
							</form>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</div>
</div>


