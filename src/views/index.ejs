<div class="p-4 mb-4 rounded-3" style="background: linear-gradient(135deg,#4e54c8,#8f94fb); color: #fff;">
	<div class="container-fluid py-2">
		<h2 class="fw-bold mb-1"><i class="bi bi-wallet2 me-2"></i>Ví của bạn</h2>
		<div class="d-flex flex-wrap gap-4">
			<div>
				<div class="small opacity-75">Số tiền trong ví hiện tại</div>
				<div class="fs-3 fw-semibold"><%= formatVND(setting?.currentWallet || 0) %> VND</div>
			</div>
			<div>
				<div class="small opacity-75">Số dư dự kiến sau chi</div>
				<div class="fs-3 fw-semibold"><%= formatVND(walletRemaining || 0) %> VND</div>
			</div>
			<form class="d-flex align-items-end gap-2" method="POST" action="/income/add">
				<div>
					<label class="form-label mb-1">Thêm thu nhập</label>
					<input class="form-control form-control-sm vnd" name="amount" placeholder="VND" />
				</div>
				<button class="btn btn-light btn-sm" type="submit"><i class="bi bi-plus-lg me-1"></i>Thêm</button>
			</form>
		</div>
	</div>
</div>

<div class="row g-3">
	<div class="col-lg-8">
		<div class="row g-3">
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<div class="small text-uppercase text-muted">Người</div>
						<p class="display-6 mb-1"><%= peopleCount %></p>
						<a class="btn btn-sm btn-outline-primary" href="/people">Quản lý</a>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<div class="small text-uppercase text-muted">Khoản vay/nợ</div>
						<p class="display-6 mb-1"><%= loansCount %></p>
						<a class="btn btn-sm btn-outline-primary" href="/loans">Quản lý</a>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="card h-100">
					<div class="card-body text-center">
						<div class="small text-uppercase text-muted">Thanh toán</div>
						<p class="display-6 mb-1"><%= paymentsCount %></p>
						<a class="btn btn-sm btn-outline-primary" href="/payments">Quản lý</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-4">
		<div class="card h-100">
			<div class="card-body">
				<h5 class="card-title mb-3"><i class="bi bi-sliders me-2"></i>Cài đặt</h5>
				<form method="POST" action="/settings">
					<div class="mb-2">
						<label class="form-label">Thu nhập tháng này (VND)</label>
						<input class="form-control vnd" name="monthlyIncome" value="<%= formatVND(setting?.monthlyIncome) || 0 %>" />
					</div>
					<div class="mb-2">
						<label class="form-label">Số dư ví (VND)</label>
						<input class="form-control vnd" name="walletBalance" value="<%= formatVND(setting?.walletBalance) || 0 %>" />
					</div>
					<button class="btn btn-primary btn-sm" type="submit">Lưu</button>
				</form>
				<hr />
					<div class="small text-muted">Chi tiêu đã ghi nhận: <strong><%= formatVND(totalExpenses) %></strong></div>
					<div class="small text-muted">Số dư dự kiến sau chi: <strong><%= formatVND(walletRemaining) %></strong></div>
				<a class="btn btn-outline-secondary btn-sm mt-2" href="/expenses"><i class="bi bi-bag-dash me-1"></i>Quản lý chi tiêu</a>
			</div>
		</div>
	</div>
</div>


