<h3><%= isEdit ? 'Sửa khoản' : 'Thêm khoản' %></h3>
<form method="POST" action="<%= isEdit ? '/loans/' + loan.id + '?_method=PUT' : '/loans' %>">
	<div class="row g-3">
		<div class="col-md-6">
			<label class="form-label">Người</label>
			<select class="form-select" name="personId" required>
				<option value="">-- chọn --</option>
				<% people.forEach(p => { %>
					<option value="<%= p.id %>" <%= loan.personId == p.id ? 'selected' : '' %>><%= p.name %></option>
				<% }) %>
			</select>
		</div>
		<div class="col-md-6">
			<label class="form-label">Loại</label>
			<select class="form-select" name="direction" required>
				<option value="lend" <%= loan.direction === 'lend' ? 'selected' : '' %>>Cho vay</option>
				<option value="borrow" <%= loan.direction === 'borrow' ? 'selected' : '' %>>Đi vay</option>
			</select>
		</div>
		<div class="col-md-4">
			<label class="form-label">Số tiền (VND)</label>
			<input class="form-control vnd" name="amount" value="<%= formatVND(loan.amount) || '' %>" required />
		</div>
		<div class="col-md-4">
			<label class="form-label">Lãi suất (%)</label>
			<input class="form-control" type="number" step="0.01" name="interestRate" value="<%= loan.interestRate || '' %>" />
		</div>
		<div class="col-md-4">
			<label class="form-label">Ngày bắt đầu</label>
			<input class="form-control" type="date" name="startDate" value="<%= loan.startDate || '' %>" />
		</div>
		<div class="col-md-6">
			<label class="form-label">Hạn</label>
			<input class="form-control" type="date" name="dueDate" value="<%= loan.dueDate || '' %>" />
		</div>
		<div class="col-md-6">
			<label class="form-label">Ghi chú</label>
			<textarea class="form-control" name="note" rows="1"><%= loan.note || '' %></textarea>
		</div>
	</div>
	<div class="mt-3 d-flex gap-2">
		<button class="btn btn-primary" type="submit"><%= isEdit ? 'Cập nhật' : 'Tạo' %></button>
		<a class="btn btn-secondary" href="/loans">Huỷ</a>
	</div>
</form>


