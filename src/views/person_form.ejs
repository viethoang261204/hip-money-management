<h3><%= isEdit ? 'Sửa người' : 'Thêm người' %></h3>
<form method="POST" action="<%= isEdit ? '/people/' + person.id + '?_method=PUT' : '/people' %>">
	<div class="mb-3">
		<label class="form-label">Tên</label>
		<input class="form-control" name="name" value="<%= person.name || '' %>" required />
	</div>
	<div class="mb-3">
		<label class="form-label">Điện thoại</label>
		<input class="form-control" name="phone" value="<%= person.phone || '' %>" />
	</div>
	<div class="mb-3">
		<label class="form-label">Ghi chú</label>
		<textarea class="form-control" name="note" rows="3"><%= person.note || '' %></textarea>
	</div>
	<div class="d-flex gap-2">
		<button class="btn btn-primary" type="submit"><%= isEdit ? 'Cập nhật' : 'Tạo' %></button>
		<a class="btn btn-secondary" href="/people">Huỷ</a>
	</div>
</form>


